<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primaryColor</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primaryDarkColor</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accentColor</item>

        <item name="android:colorSecondary">@color/secondaryColor</item>
    </style>

    <style name="AppTheme.TranslucentButton" parent="android:Widget.Material.Button.Colored">
        <item name="android:background">@drawable/button_translucent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TranslucentLabel" parent="android:Widget.Material.TextView">
        <item name="android:background">#44FFFFFF</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.Game.PlayerBar.TextLabel" parent="android:Widget.Material.TextView">
        <item name="android:background">#444444</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.Game.PlayerBar.TextLabel.Translucent" parent="AppTheme.Game.PlayerBar.TextLabel">
        <item name="android:background">#44FFFFFF</item>
    </style>

    <style name="AppTheme.Game.Button.Move" parent="android:Widget.Material.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:textSize">36sp</item>
        <!-- <item name="android:layout_margin">2dp</item> -->
    </style>

    <style name="AppTheme.Game.Button.Move.Translucent" parent="AppTheme.Game.Button.Move">
        <item name="android:background">@drawable/button_translucent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
